<% if @surveys %>
  <% @surveys.each do |survey| %>
  <div class="row">
    <div class="col-md-3">
      <h3><a href="/survey/<%= survey.id %>"><%= survey.title %></a></h3>
      <h4>Created on: <%= survey.created_at.to_date %></h4>
    </div>
    <div class="col-md-2">
      <form  action="/survey/<%= survey.id %>/delete" method="post">
        <input type="hidden" name="_method" value="delete">
            <h3> <button type="submit" name="button" class="btn btn-danger btn-xs">Delete the survey</button> </h3>

      </form>

    </div>
  </div>
  <% end %>
<% end %>

<form action="/surveys/new" method="post">
  <h2>Create a new Survey</h2>
  <div class="form-group">
    <input type="text" name="survey_title" placeholder="Give it a title..." class="form-control">
  </div>
  <button class="btn btn-success" type="submit">Submit</button>
</form>
